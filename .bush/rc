BUSH=${BUSH:-$(dirname ${BASH_SOURCE[0]})}
source $BUSH/lib

b.say "-> $BUSH"
b.oneline_

_sw_all=$(b.stopwatch)
for _f in $(b.files "$BUSH/rc.d"); do
    b.say "$(printf "%-60s " "-> $_f")"
    _sw_one=$(b.stopwatch)
    source $_f 
    _err="$(b.painterr)"
    b.oneline && b.say "$(printf "%-59s")"
    b.say "$_err <- $(eval "$_sw_one")"
    echo 
done

b.say "<- $(eval "$_sw_all")"
b.morelines && b.say