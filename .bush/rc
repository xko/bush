BUSH=${BUSH:-$(dirname ${BASH_SOURCE[0]})}
source $BUSH/lib

bush! () {
    source $BUSH/rc
}

echo "-> $BUSH"
_sw_all=$(b.stopwatch)
for _f in $(b.files "$BUSH/rc.d"); do
    printf "%-60s " "-> $_f"
    _sw_one=$(b.stopwatch)
    source $_f 
    _status=$(b.redgreen $?)
    b.oneline || printf "%-62s " "â†‘"
    echo -n "$_status <- "; eval "$_sw_one"; echo
done
echo -n "<- "
eval "$_sw_all"; echo
unset b_1linemode
